# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# User endpoint
GET     /                           controllers.Application.index
GET     /user/:username             controllers.UserEndpoint.findByUsername(username: String)
POST    /user                       controllers.UserEndpoint.addUser
PATCH   /user/:username             controllers.UserEndpoint.patchUser(username: String)
DELETE  /user/:username             controllers.UserEndpoint.deleteUser(username: String)
POST    /auth                       controllers.UserEndpoint.auth

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    